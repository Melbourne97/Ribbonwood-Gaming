<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ribbonwood Gaming</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
            <div class="container">
                <a class="img-thumbnail d-sm-inline-flex" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/lib/Images/RibbonwoodLogo.png" alt="Logo" height="50" width="45" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-item" role="combobox" aria-expanded="false" href="#" data-toggle="dropdown">Products <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Store">All Products</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Store" asp-route-vendor="Bundles">Bundles</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Store" asp-route-vendor="Merch">Merch</a></li>
                                <li class="m-0"><hr class="m-1 mx-3" style="border:1px solid grey;" /></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Store" asp-route-vendor="Wizards of the Coast">Wizards of the Coast</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Store" asp-route-vendor="Level Up Dice">Level Up Dice</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Store" asp-route-vendor="Hero Forge">Hero Forge</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Store" asp-route-vendor="Wyrmwood">Wyrmwood</a></li>

                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="FAQ">FAQ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Admin">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container ">
            &copy; 2020 - Ribbonwood - <a class="btn-link" asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
